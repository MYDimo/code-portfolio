---
import Nav from "../components/Nav";
const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta title={`Mihaylo Dimo - ${frontmatter.title}`} />
    <link rel="icon" href="/icon.svg" type="image/svg+xml" />
    <title>{`MD - ${frontmatter.title}`}</title>
  </head>
  <body class="bg-slate-100 w-full min-h-screen">
    <Nav client:only="react"/>
    <main class="bg-green-50 flex justify-around mt-10">
      <article class="prose w-3/5 h-full">
        <slot />
      </article>
    </main>
    <footer></footer>
  </body>
</html>
