---
import { Image } from "astro:assets";
const { slug, title, pubDate, description, cover, coverAlt, tags } =
	Astro.props.projectInfo;
const { cardIndex } = Astro.props;

---

<article class="group w-4/5 lg:w-3/5">
	<!-- <div class="h-full shadow-lg bg-no-repeat bg-top bg-cover" style=`background-image: url(${cover})`> -->
	<div
		class=`flex flex-col items-center lg:items-start lg:flex lg:flex-row justify-around ${cardIndex ? "lg:flex-row-reverse" : null } lg:h-80`
	>
		<div class="flex flex-col prose prose-base w-2/3 h-full">
			<h1 class="text-center group-hover:underline underline-solid"><a href={slug} class="no-underline">{title}</a></h1>
      <p class="text-center">{description}</p>
		</div>
		<img
			class="w-auto h-auto object-cover rounded-l-lg px-5"
			src={cover}
			alt={coverAlt}
		/>
		<!-- <Image src={cover} alt={coverAlt}/> -->
	</div>
</article>
